# Laravel Development Dockerfile
FROM php:8.4-fpm-alpine

# Accept build arguments for user ID and group ID
ARG UID=1000
ARG GID=1000

# Install system dependencies and PHP extensions
RUN apk add --no-cache \
    git \
    curl \
    libpng-dev \
    libzip-dev \
    zip \
    unzip \
    oniguruma-dev \
    postgresql-dev \
    mysql-client \
    icu-dev \
    linux-headers \
    bash \
    redis \
    && docker-php-ext-install \
    pdo_mysql \
    pdo_pgsql \
    zip \
    mbstring \
    intl \
    opcache \
    && apk del --purge \
    && rm -rf /var/cache/apk/*

# Install Redis PHP extension via PECL
RUN apk add --no-cache --virtual .build-deps \
    $PHPIZE_DEPS \
    && pecl install redis \
    && docker-php-ext-enable redis \
    && apk del .build-deps

# Install Composer
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# Install Node.js and npm for development
RUN apk add --no-cache nodejs npm

# Create or modify www-data user to match host UID/GID
RUN deluser www-data 2>/dev/null || true \
    && addgroup -g ${GID} www-data \
    && adduser -u ${UID} -G www-data -s /bin/sh -D www-data

# Set working directory
WORKDIR /var/www/html

# Set ownership
RUN chown -R www-data:www-data /var/www/html

USER www-data

EXPOSE 9000

CMD ["php-fpm"]

