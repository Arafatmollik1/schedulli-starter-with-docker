# Node.js Development Dockerfile
FROM node:20-alpine

# Accept build arguments for user ID and group ID
ARG UID=1000
ARG GID=1000

# Create user matching host UID/GID
RUN deluser node 2>/dev/null || true \
    && addgroup -g ${GID} node \
    && adduser -u ${UID} -G node -s /bin/sh -D node

WORKDIR /app

# Copy package files first (for better caching)
COPY --chown=node:node package.json package-lock.json ./

# Install dependencies as root first, then switch user
RUN npm ci \
    && chown -R node:node /app

# Switch to node user
USER node

EXPOSE 5173

CMD ["npm", "run", "dev"]

