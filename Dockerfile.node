# Node.js Build Dockerfile
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package.json package-lock.json ./

# Install dependencies
RUN npm ci --only=production=false

# Copy application files
COPY . .

# Build assets
# Build assets (set CI=true to exclude Wayfinder plugin)
ENV CI=true
RUN npm run build

# This image is typically used as a build stage
# The built assets will be copied to the main application container

